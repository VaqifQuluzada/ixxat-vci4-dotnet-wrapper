<Project xmlns="http://schemas.microsoft.com/developer/msbuild/2003">
  <Target Name="CopyNativeLibs_x86" AfterTargets="Build">
    <ItemGroup>
      <NativeLibs    Include="$(MSBuildThisFileDirectory)\x86\vcinet.x86.dll" />
      <DotNetHostLib Include="$(MSBuildThisFileDirectory)\x86\Ijwhost.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(NativeLibs)"    DestinationFolder="$(OutDir)\vcinet\x86" />
    <Copy SourceFiles="@(DotNetHostLib)" DestinationFolder="$(OutDir)\vcinet\x86" />
  </Target>
  <Target Name="CopyNativeLibs_x64" AfterTargets="Build">
    <ItemGroup>
      <NativeLibs    Include="$(MSBuildThisFileDirectory)\x64\vcinet.x64.dll" />
      <DotNetHostLib Include="$(MSBuildThisFileDirectory)\x64\Ijwhost.dll" />
    </ItemGroup>
    <Copy SourceFiles="@(NativeLibs)"    DestinationFolder="$(OutDir)\vcinet\x64" />
    <Copy SourceFiles="@(DotNetHostLib)" DestinationFolder="$(OutDir)\vcinet\x64" />
  </Target>
</Project>